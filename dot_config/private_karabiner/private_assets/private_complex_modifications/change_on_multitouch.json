{
    "title": "MultiTouch",
    "rules": [
        {
            "description": "Change Key on MultiTouch",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "f",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "pointing_button": "button1"
                        }
                    ],
                    "conditions": [
                        {
                            "type": "variable_unless",
                            "name": "multitouch_extension_finger_count_total",
                            "value": 0
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "d"
                    },
                    "to": [
                        {
                            "set_variable": {
                                "name": "d_pressed",
                                "value": 1
                            }
                        }
                    ],
                    "to_delayed_action": {
                        "to_if_invoked": [
                            {
                                "set_variable": {
                                    "name": "d_pressed",
                                    "value": 0
                                }
                            }
                        ]
                    },
                    "parameters": {
                        "basic.to_delayed_action_delay_milliseconds": 500
                    },
                    "conditions": [
                        {
                            "name": "d_pressed",
                            "type": "variable_unless",
                            "value": 1
                        },
                        {
                            "type": "variable_unless",
                            "name": "multitouch_extension_finger_count_total",
                            "value": 0
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "d"
                    },
                    "to": [
                        {
                            "set_variable": {
                                "name": "d_pressed",
                                "value": 0
                            }
                        },
                        {
                            "key_code": "left_arrow",
                            "modifiers": [
                                "left_command"
                            ]
                        },
                        {
                            "key_code": "left_arrow",
                            "modifiers": [
                                "left_command"
                            ]
                        },
                        {
                            "key_code": "right_arrow",
                            "modifiers": [
                                "left_command",
                                "left_shift"
                            ]
                        },
                        {
                            "key_code": "x",
                            "modifiers": [
                                "left_command"
                            ]
                        }
                    ],
                    "conditions": [
                        {
                            "name": "d_pressed",
                            "type": "variable_if",
                            "value": 1
                        },
                        {
                            "type": "variable_unless",
                            "name": "multitouch_extension_finger_count_total",
                            "value": 0
                        }
                    ]
                }
            ]
        }
    ]
}